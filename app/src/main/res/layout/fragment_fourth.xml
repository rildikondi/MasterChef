<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fourthLinearLayout"
    tools:context="com.example.amarildo.masterchef.FourthFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fourthScrollView">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Inserisci l'indirizzo di destinazione del tuo Box SecondChef. Se hai bisogno di ricevere la fattura comerciale, abilita l'apposita opzione"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="14sp" />
            </LinearLayout>

            <ExpandableListView
                android:id="@+id/nuovoInExpandableListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_line"
                android:layout_margin="15dp"
                android:layout_marginBottom="20dp"
                android:groupIndicator="@null" >

            </ExpandableListView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rouned_nome">

                    <TextView
                        android:id="@+id/nomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="NOME * "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/nomeEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/nomeTextView"
                        android:layout_toRightOf="@+id/nomeTextView"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:textColorLink="#ffffff" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/rouned_nome"
                    android:foregroundTint="@android:color/darker_gray">


                    <TextView
                        android:id="@+id/cognomeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="COGNOME * "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/cognomeEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/cognomeTextView"
                        android:layout_toRightOf="@+id/cognomeTextView"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:textColorLink="#ffffff" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:foregroundTint="@android:color/darker_gray">


                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="EMAIL  * "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/emailTextView"
                        android:layout_toRightOf="@+id/emailTextView"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:textColorLink="#ffffff" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="2dp"
                    android:foregroundTint="@android:color/darker_gray">

                    <TextView
                        android:id="@+id/cellTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="CELL  * "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/cellEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/cellTextView"
                        android:layout_toRightOf="@+id/cellTextView"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:textColorLink="#ffffff" />
                </RelativeLayout>

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rouned_nome">


                    <TextView
                        android:id="@+id/telefonoTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="TELEFONO "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/telefonoEditText"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/telefonoTextView"
                        android:layout_toRightOf="@+id/telefonoTextView"
                        android:background="#ffffff"
                        android:inputType="text"
                        android:textColorLink="#ffffff" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/middleRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/switchButton"
                    android:text="DESIDERO RICEVERE FATTURA COMMERCIALE"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/switchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="22dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="10dp"
                    android:checked="false"
                    android:paddingLeft="10dp"
                    android:splitTrack="false"
                    android:textOff="true"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:text="In asssenza di richiesta di fattura commerciale"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:paddingLeft="20dp"
                android:text="l'indirizzo di fatturazione sara indentico a"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/lastTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:text="quello di spedizione"
                android:textColor="#000000"
                android:textSize="12sp" />



        </LinearLayout>
    </ScrollView>
</RelativeLayout>
